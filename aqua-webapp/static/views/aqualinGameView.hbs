<html>
  <head>
    <meta charset="UTF-8" />
    {{#unless score}}
      <meta http-equiv="refresh" content="5">
    {{/unless}}
    <title>Aqualin</title>
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
  </head>

  <body>
    <div id="page">
      <h1>Aqualin</h1>
      <div id="game">
        <div id="playerSide">
          <div class="turnPanel">
            {{#if isWitnessGame}}
            <div>You watch  the <span>{{gameState.playerTurn}}</span> team in this Aqualin game.</div>
            {{else}}
            <div> You are the <span>{{team}}</span> team.</div>
              {{#if isPlayerTurn}}
              <div> It's your turn.</div>
               {{else}}
               <div> It's your opponent turn.</div>
             {{/if}}
            {{/if}}
         </div>
          <div id="scorePanel">
            {{#if score}}
            <div class="score">{{#renderScore score}}{{/renderScore}}</div>
            {{/if}}
        
      </div>
      <a href="/new" class="startNewGame">New game</a>
        </div>
        
        <div id="boardSide">
          <h2>Board</h2>
          
          <div class="board">
            {{#each gameState.board}}
              {{#each this}}
                {{! call renderCell with the game template, the row index and column index
                 @root is our game template, "this" is the cell}} 
                {{#renderCell this @root @../index @index}}{{/renderCell}}
              {{/each}}
            {{/each}}
          </div>
          {{#if message}}
          <div class="errorMessage">{{message}}</div>
          {{/if}}
        </div>
        <div id="riverSide">
          <h2>River</h2>
          <div id="river">
            {{#each gameState.river}}
              {{#renderRiver this @root @index}}{{/renderRiver}}
            {{/each}}
          </div>
        </div>
      </div>
      
    </div>
  </body>
</html>
