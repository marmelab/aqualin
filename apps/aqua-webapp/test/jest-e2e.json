{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.hbs$": "handlebars-jest"
  },
  "moduleNameMapper": {
    "^@aqua/core(|/.*)$": "<rootDir>/../../../packages/aqua-core/src/$1"
  },
  "globals": {
    "handlebars-jest": {
      "helperDirs": ["<rootDir>/../../../packages/aqua-core/src"],
      "helperExtensions": [".js", ".mjs", "ts"]
    }
  }
}
